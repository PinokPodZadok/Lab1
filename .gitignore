import java.util.Scanner;

public class test {
	public static void main(String[] args) {
		System.out.print("Введите текст: ");
		Scanner s = new Scanner(System.in);
		String str = s.nextLine();
		int c = 0;
		for (int i = 0; i < str.length(); i++) {
			System.out.print(str.charAt(i));
			System.out.print("  ");
		}
		System.out.println();
		for (int i = 0; i < str.length(); i++) {
			c = str.codePointAt(i);
			if (c == 32) {
				System.out.print("   ");
			} else if (c >= 1072 & c <= 1103 || c == 1105) {
				if (c == 1105) {
					System.out.print("7  ");
				} else if (c - 1071 >= 7) {
					if (c - 1071 >= 8) {
						System.out.print(c - 1071 + 1 + " ");
					} else
						System.out.print(c - 1071 + 1 + "   ");
				} else if (c - 1071 >= 8) {
					System.out.print(c - 1071 + "  ");
				} else
					System.out.print(c - 1071 + "  ");
			} else if (c == 32) {
				System.out.print("   ");
			} else if (c >= 1040 & c <= 1071 || c == 1025) {
				if (c == 1025) {
					System.out.print("7  ");
				} else if (c - 1039 >= 7) {
					if (c - 1039 >= 8) {
						System.out.print(c - 1039 + 1 + " ");
					} else
						System.out.print(c - 1039 + 1 + "   ");
				} else if (c - 1039 >= 8) {
					System.out.print(c - 1039 + "  ");
				} else
					System.out.print(c - 1039 + "  ");
				if (c == 32) {
					System.out.print("   ");
				}
				if (c > 1103 & c != 1025 & c != 1105 || c < 1040 & c != 1025
						& c != 1105) {
					System.out.print("Введите текст в русской раскладке!");
				}
			}

		}
	}
}
